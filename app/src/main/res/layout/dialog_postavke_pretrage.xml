<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/seekBarShowHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekRadijusKrug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:isb_indicator_color="@color/colorFabIcon"
            app:isb_indicator_text_color="@color/colorAccent"
            app:isb_indicator_text_size="18sp"
            app:isb_max="5000"
            app:isb_min="500"
            app:isb_progress="500"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="false"
            app:isb_thumb_color="@color/colorPrimary"
            app:isb_thumb_size="25dp"
            app:isb_tick_marks_drawable="@drawable/thumb_seek"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="@color/GlavnaBoja"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="10"
            app:isb_track_background_color="@color/fui_bgGitHub"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/GlavnaBoja"
            app:isb_track_progress_size="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/petTisucaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="5000 m"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekRadijusKrug" />

        <TextView
            android:id="@+id/polatextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="2500 m"
            app:layout_constraintEnd_toStartOf="@+id/petTisucaTextView"
            app:layout_constraintStart_toEndOf="@+id/petstoTextView"
            app:layout_constraintTop_toBottomOf="@+id/seekRadijusKrug" />

        <TextView
            android:id="@+id/petstoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="500 m"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekRadijusKrug" />

        <Button
            android:id="@+id/spremiPostavke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@color/GlavnaBoja"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="0dp"
            android:text="Spremi"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/polatextView" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>